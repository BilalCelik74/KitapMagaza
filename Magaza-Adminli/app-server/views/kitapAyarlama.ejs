<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="baslik">Kitaplar</h1>
    <a href="/kitapAyarlama/kitapEkle" class="btn btn-primary"
      >Yeni Kitap Ekle</a
    >
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>Tür</th>
        <th>Yazar</th>
        <th>Sayfa Sayısı</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>İşlemler</th>
      </tr>
    </thead>
    <tbody>
      <% liste.forEach(kitap => { %>
      <tr>
        <td><%= kitap.id %></td>
        <td><%= kitap.ad %></td>
        <td><%= kitap.turu %></td>
        <td><%= kitap.yazari %></td>
        <td><%= kitap.sayfaSayisi %></td>
        <td><%= kitap.fiyat %> TL</td>
        <td><%= kitap.adet%></td>
        <td>
          <a
            href="/kitapAyarlama/<%= kitap.id %>/kitapDuzenle"
            class="btn btn-sm btn-warning"
            >Düzenle</a
          >
          <form
            action="/kitapAyarlama/<%= kitap.id %>?_method=DELETE"
            method="POST"
            style="display: inline"
          >
            <button type="submit" class="btn btn-sm btn-danger">Sil</button>
          </form>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
