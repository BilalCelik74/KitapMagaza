<div class="container mt-5">
  <h2>İletişim Formu</h2>
  <form id="iletisimFormu">
    <div class="mb-3">
      <label for="ad" class="form-label">Adınız</label>
      <input type="text" class="form-control" id="ad" required />
    </div>
    <div class="mb-3">
      <label for="email" class="form-label">E-posta</label>
      <input type="email" class="form-control" id="email" required />
    </div>
    <div class="mb-3">
      <label for="mesaj" class="form-label">Mesajınız</label>
      <textarea class="form-control" id="mesaj" rows="4" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Gönder</button>
  </form>

  <div id="basariMesaji" class="alert alert-success mt-4 d-none">
    Mesajınız başarıyla alındı!
  </div>
</div>

<script>
  document
    .getElementById("iletisimFormu")
    .addEventListener("submit", function (e) {
      e.preventDefault();

      document.getElementById("basariMesaji").classList.remove("d-none");
      this.reset();
    });
</script>
