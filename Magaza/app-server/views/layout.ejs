<script>
  document.addEventListener("DOMContentLoaded", () => {
    const tema = localStorage.getItem("theme") || "light";
    document.documentElement.setAttribute("data-bs-theme", tema);
  });

  function degistirTema() {
    const eskiTema = document.documentElement.getAttribute("data-bs-theme");
    const yeniTema = eskiTema === "dark" ? "light" : "dark";
    document.documentElement.setAttribute("data-bs-theme", yeniTema);
    localStorage.setItem("theme", yeniTema);
  }
</script>
